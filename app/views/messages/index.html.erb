<%
=begin
%>

<div class="panel panel-default">
    <div class="panel-heading">
        <label>メッセージ一覧</label>
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
        <% end %>
    </div>
</div>

<%
=end
%>
    
<%= form_for(@message) do |f| %>

<form class="form-horizontal">
    <div class="form-group">
    <label for="message_name" class="control_label col-mid-2">名前</label>
        <div class="col-mid-10">
        <%= f.text_field :name, :class => "form-control" %>
        </div>
    </div>
    <div class="form-group">
    <label for="message_body" class="control_label col-mid-2">内容</label>
        <div class="col-mid-10">
        <%= f.text_area :body, :class => "form-control" %>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-mid-offset-2 col-mid-10">
        <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
    </div>
</form>
<% end %>
